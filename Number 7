#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int i;
int n;
int l =0;
int sum = 0;
for( l ; l<=1000 ; l++)
{
cout << "Enter a number: ";
cin >> n;

    for (i = 1 ; i<=n ; i++)
    {
    sum = sum + i;
    }

    cout << "The sum of all whole numbers from 1 to " << n << "is" << sum << endl;
}
    _getch();
    return 0;
}
