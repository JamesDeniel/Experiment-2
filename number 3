#include <iostream>
#include <cmath>
#include <conio.h>
using namespace std;

int main()
{
    int x, y, z = 2.5, v;
    cout << "Enter a value of x: ";
    cin >> x;
    cout << "Enter a value of y: ";
    cin >> y;
    if ( x == 1 && y <= 4){
        v = x*y*z;
        cout << "The value of V is: " << v;
    } else if (x == 1 && y >= 5){
        v = x + y / z;
        cout << "The value of V is: " << v;
    } else if (x == 2 && y <= 5){
        v =  ( x - y ) / z ;
        cout << "The value of V is: " << abs(v);
    } else if (x == 2 && y >> 5){
        v = (x -  (sqrt (y + z)));
        cout << "The value of V is: " << v;
    } else if (x <= 3 ) {
        v = x + y + z;
        cout << "The value of V is: " << v;
    }

    _getch();
    return 0;
}
